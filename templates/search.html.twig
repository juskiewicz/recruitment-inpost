{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
        {% if form.name is defined %}{{ form_row(form.name) }}{% endif %}
        {{ form_row(form.street) }}
        {{ form_row(form.city) }}
        {{ form_row(form.postalCode) }}
        {{ form_errors(form) }}
        {{ form_row(form.search) }}
    {{ form_end(form) }}

    {% if results is not null %}
        <h2>Results</h2>
        <p>Liczba punkt√≥w: {{ results['meta']['count'] }}</p>
        {% for item in results['items'] %}
            <p>- Punkt {{ loop.index }}: {{ item.name }} {{ item.address }}</p>
        {% endfor %}
    {% endif %}
{% endblock %}
